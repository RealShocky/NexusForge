# Database
DATABASE_URL=sqlite:///flows.db
# For PostgreSQL, use the following format:
# DATABASE_URL=postgresql://username:password@localhost:5432/dbname
# Docker database settings (when using the included docker-compose.yml)
POSTGRES_USER=flows_user
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=flows_db

# API Configuration
HOST=0.0.0.0
PORT=8000
API_KEY=your_secure_api_key_here  # Replace with a secure key in production

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Application Settings
LOAD_DEFAULT_MODELS=true
DEVELOPMENT_MODE=true

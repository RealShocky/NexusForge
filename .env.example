# Database
DATABASE_URL=sqlite:///flows.db
# For PostgreSQL, use the following format:
# DATABASE_URL=postgresql://username:password@localhost:5432/dbname
# Docker database settings (when using the included docker-compose.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=aiapi
POSTGRES_HOST=db
POSTGRES_PORT=5432

# API Configuration
HOST=0.0.0.0
PORT=8000
API_KEY=your_secure_api_key_here  # Replace with a secure key in production

# API Keys (replace with your own)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Stripe Settings (replace with your own)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_ENDPOINT_SECRET=your_stripe_webhook_secret

# Security settings
SECRET_KEY=your_secret_key_min_32_chars_for_jwt_tokens
SECURE_COOKIES=true
CORS_ALLOWED_ORIGINS=http://localhost:8000,https://yourdomain.com
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_TIMEFRAME=60
MAX_AUTH_FAILURES=5
AUTH_LOCKOUT_MINUTES=15

# Admin settings
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure_admin_password
ADMIN_EMAIL=admin@example.com

# Logging
LOG_LEVEL=INFO
SECURITY_LOG_PATH=logs/security.log

# OpenAI Configuration
OPENAI_MODEL=gpt-3.5-turbo

# Application Settings
LOAD_DEFAULT_MODELS=true
DEVELOPMENT_MODE=true

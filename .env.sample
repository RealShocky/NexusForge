# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Server Configuration
HOST=0.0.0.0
PORT=8000

# API Security
API_KEY=your_secure_api_key_here  # Replace with a secure key in production

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLIC_KEY=your_stripe_public_key_here

# Model Configuration
LOAD_DEFAULT_MODELS=true
DEVELOPMENT_MODE=true

# External Model API Keys
LAWGENT_API_KEY=your_lawgent_api_key_here
LAWGENT_API_URL=http://your.api.endpoint:port/api/chat/completions

# Database Configuration (optional, defaults to SQLite)
DATABASE_URL=postgresql://flows_user:flows_password@db:5432/flows_db
USAGE_DATABASE_URL=sqlite:///api_usage.db

# Rate Limiting (optional)
DEFAULT_RATE_LIMIT=60  # requests per minute

# OpenTelemetry Configuration (optional)
OPENTELEMETRY_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Application name
APP_NAME=NexusAI Forge

# Note: Never commit your actual API keys to version control
# Copy this file to .env and replace the placeholder values with your actual keys
